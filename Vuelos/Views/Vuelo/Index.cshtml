@model IEnumerable<Vuelos.Models.Vuelo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaveVuelo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaveVuelo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdVuelo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdVuelo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdVuelo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
